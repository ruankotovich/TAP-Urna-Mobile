<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_analytics_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaf"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="exlege.ru.urn.controller.AnalyticsWindow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25dp"
        android:id="@+id/aawAnalytics"
        android:gravity="center"
        android:text="Estatísticas da votação"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#EEDD00"
        android:id="@+id/aawfirstPanel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Primeiro Colocado"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="pode crer"
            android:id="@+id/aawFirstName"/>

        <ProgressBar
            android:id="@+id/aawfirstBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="20" />

        <TextView
            android:id="@+id/aawfirstPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CC0000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="pode crer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#CCDDDD"
        android:id="@+id/aawsecondPanel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Segundo Colocado"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="pode crer"
            android:id="@+id/aawsecondName"/>

        <ProgressBar
            android:id="@+id/aawsecondBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="20" />

        <TextView
            android:id="@+id/aawsecondPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CC0000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="pode crer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#805000"
        android:id="@+id/aawthirthPanel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Terceiro Colocado"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="pode crer"
            android:id="@+id/aawthirthName"/>

        <ProgressBar
            android:id="@+id/aawthirthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="20" />

        <TextView
            android:id="@+id/aawthirthPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CC0000"
            android:gravity="center"
            android:textSize="25dp"
            android:text="pode crer"/>
    </LinearLayout>
</LinearLayout>
