<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vote_elector_login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="exlege.ru.urn.controller.VoteElectorLoginScreen">

    <TextView
        android:text="Olá, eleitor(a)."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_marginTop="50dp"/>

    <TextView
        android:text="Digite seu título"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="120dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="170dp"
        android:inputType="number"
        android:ems="10"
        android:background="@drawable/textbox"
        android:id="@+id/velsTitulo"/>

    <Button
        android:text="INICIAR VOTAÇÃO"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/velsVotar"
        android:layout_below="@+id/velsTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:background="#007733"/>

</RelativeLayout>
